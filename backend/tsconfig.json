{
  "compilerOptions": {
    /* Paths */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",

    /* Node types */
    "lib": ["ESNext"],
    "types": ["node"],

    /* Output options */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Type checking */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Disable problematic frontend options */
    "verbatimModuleSyntax": false,
    "jsx": "preserve"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
